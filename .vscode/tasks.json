{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Project",
      "type": "shell",
      "command": [
        "export  PROJECT_PATH=${cwd}",
        "&& export PROJECT_NAME=app-template",
        "&& idf.py build"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build & Run Wokwi Simulation",
      "type": "shell",
      "command": [
        "export  PROJECT_PATH=${cwd}",
        "&& export PROJECT_NAME=app-template",
        "&& pip3 install websockets==10.2",
        "&& bash wokwi/run-wokwi.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
  ]
}